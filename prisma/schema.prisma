generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  name         String
  balance      Float
  login        String        @unique
  password     String
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(uuid())
  amount    Float
  title     String
  monthRef  String
  type      String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
